{
  "devOptions": {
    "port": 3000,
    "bundle": false,
    "open": "none"
  },
  "buildOptions": {
    "clean": true,
    "sourceMaps": false
  },
  "mount": {
    "public": "/",
    "src": "/_dist_"
  },
  "plugins": [
    ["@snowpack/plugin-run-script", { "cmd": "tsc --noEmit", "watch": "$1 --watch"}]
  ]
}
